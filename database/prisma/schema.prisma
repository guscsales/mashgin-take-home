generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Category {
  id      Int    @id @default(autoincrement())
  imageId String
  name    String

  Food Food[]

  @@map("categories")
}

model Food {
  id      Int     @id @default(autoincrement())
  imageId String
  name    String
  price   Decimal

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  @@map("foods")
}
